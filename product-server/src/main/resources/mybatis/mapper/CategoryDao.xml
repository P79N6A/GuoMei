<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guomei.dao.GoodsDao">


    <resultMap type="category" id="category">
        <id column="category_id" property="cid"/>
        <result column="category_name" property="name"/>
        <result column="category_parent_id" property="parentId"/>
        <result column="category_level" property="cLevel"/>
    </resultMap>

    <select id="findCategory" resultType="category">
        SELECT category_id,category_name,category_parent_id FROM category
    </select>

    <select id="findCategoryParent" resultType="category">
        SELECT category_id,category_name,category_parent_id FROM category WHERE category_id = #{parentId}
    </select>

</mapper>